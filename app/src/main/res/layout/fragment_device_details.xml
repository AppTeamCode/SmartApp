    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#161823" />
</LinearLayout>
    <View
        android:layout_marginTop="7dp"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
